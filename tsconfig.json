{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "target": "ESNext",
    "lib": ["ESNext", "DOM"], // "ESNext" includes all standard utility types
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
